<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="@dimen/space_5dp"
    android:layout_marginTop="@dimen/space_5dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="5dp"
            android:background="@drawable/lala"

            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            >
            <RelativeLayout
                android:background="@drawable/allcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"



                >
                <RelativeLayout
                    android:layout_centerVertical="true"

                    android:id="@+id/layout"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:text="Name "
                        android:textColor="@color/toolbar1"
                        android:textSize="10dp"></TextView>

                    <TextView
                        android:layout_below="@+id/customer_name"
                        android:id="@+id/customer_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_marginLeft="5dp"
                        android:text="trixid"
                        android:textColor="@color/toolbar1"
                        android:textSize="10dp"></TextView>

                    <TextView
                        android:layout_below="@+id/customer_number"
                        android:id="@+id/customer_area1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="5dp"
                        android:text="ammount  "
                        android:textColor="@color/toolbar1"
                        android:textSize="10dp"></TextView>
                    <TextView
                        android:layout_below="@+id/customer_area1"
                        android:id="@+id/customer_area11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_marginLeft="5dp"
                        android:text="Fee  "
                        android:textColor="@color/toolbar1"
                        android:textSize="10dp"></TextView>
                    <TextView
                        android:layout_marginBottom="10dp"
                        android:layout_below="@+id/customer_area11"
                        android:id="@+id/customer_area111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="5dp"
                        android:text="Total  "

                        android:textColor="@color/toolbar1"
                        android:textSize="10dp"></TextView>
                    <TextView
                        android:id="@+id/logout"
                        android:textStyle="normal"
                        android:layout_centerVertical="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"


                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"

                        android:text="  Date "
                        android:textAllCaps="false"
                        android:textColor="@color/toolbar1"
                        android:textSize="10dp"></TextView>
                    <TextView
                        android:id="@+id/logout1"
                        android:layout_below="@id/logout"
                        android:textStyle="normal"
                        android:layout_centerVertical="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"


                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"

                        android:text="  Date "
                        android:textAllCaps="false"
                        android:textColor="@color/toolbar1"
                        android:textSize="10dp"></TextView>
                    <TextView
                        android:id="@+id/logout2"
                        android:layout_below="@id/logout1"
                        android:textStyle="normal"
                        android:layout_centerVertical="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"


                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="5dp"

                        android:text="  Date "
                        android:textAllCaps="false"
                        android:textColor="@color/red_connectify"
                        android:textSize="10dp"></TextView>
                </RelativeLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>